<div id="album-modal-<%= album[:id] %>" class="modal">
  <div class="modal-background"></div>
  <div class="modal-card">
    <header class="modal-card-head">
      <p class="modal-card-title"><%= album[:title] %></p>
      <button class="delete" aria-label="close"></button>
    </header>
    <section class="modal-card-body">
      <div class="modal-content">
        <div class="slider">
          <div class="slides">
            <% album[:photos].each do |photo| %>
              <div class="slides-image-container">">
                <img src="<%= photo[:url] %>" class="image is-4by3"><br>
                <div class="slides-image-title is-size-7"><%= photo[:title] %></div>
                <div class="slides-image-url is-size-7"><%= photo[:url] %></div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </section>
    <footer class="modal-card-foot">
      <div class="buttons">
        <button class="button modal-close" aria-label="close">Close</button>
      </div>
    </footer>
  </div>
</div>