<div id="album-modal-<%= album[:id] %>" class="modal">
  <div class="modal-background"></div>
  <div class="modal-card">
    <header class="modal-card-head">
      <p class="modal-card-title"><%= album[:title] %></p>
      <button class="delete" aria-label="close"></button>
    </header>
    <section class="modal-card-body">
      <div class="modal-content">
        <p class="image is-4by3">
          <img src="<%= album[:photos][0][:url] %>" alt="image">
        </p>
      </div>

      <p>
        Image url: <%= album[:photos][0][:url] %>
      </p>
    </section>
    <footer class="modal-card-foot">
      <div class="buttons">
        <button class="button modal-close" aria-label="close">Close</button>
      </div>
    </footer>
  </div>
</div>